{
  "name": "humble desktop",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace/rove",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_history,target=/home/vscode/.bash_history,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot-chat",
        "GitHub.copilot",
        "medo64.render-crlf",
        "mhutchie.git-graph",
        "ms-iot.vscode-ros",
        "ms-python.autopep8",
        "ms-python.flake8",
        "ms-python.isort",
        "ms-python.vscode-pylance",
        "njpwerner.autodocstring",
        "VisualStudioExptTeam.vscodeintellicode"
      ]
    }
  },
  "features": {
    "desktop-lite": {
        "password": "vscode",
        "webPort": "6080",
        "vncPort": "5901"
    }
  }
}
